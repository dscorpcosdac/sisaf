<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>Login</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">

    <!-- Bootstrap core CSS -->
    <link href="{{ asset('bundles/sisaf/bootstrap/css/bootstrap.min.css') }}" rel="stylesheet">
    
    <!-- Font Awesome -->
    <link href="{{ asset('bundles/sisaf/css/font-awesome.min.css') }}" rel="stylesheet">
    
    <!-- Endless -->
    <link href="{{ asset('bundles/sisaf/css/endless.min.css') }}" rel="stylesheet">

  </head>

  <body>
    <div class="login-wrapper">
        <div class="text-center">
            <h2 class="fadeInUp animation-delay8" style="font-weight:bold">
                <span class="text-success">SISAF</span> <span style="color:#ccc; text-shadow:0 1px #fff">Admin</span>
            </h2>
        </div>
        <div class="login-widget animation-delay1"> 
            <div class="panel panel-default">
                <div class="panel-heading clearfix">
                    <div class="pull-left">
                        <i class="fa fa-lock fa-lg"></i> Login
                    </div>
                </div>
                <div class="panel-body">
                    <form action="{{ path('login_check') }}" method="post" class="form-login">
                        <div class="form-group">
                            <label for="username">Username:</label>
                            <input type="text" id="username" name="_username" value="{{ last_username }}" placeholder="Username" class="form-control input-sm bounceIn animation-delay2"/>
                        </div>
                        <div class="form-group">
                            <label for="password">Password:</label>
                            <input type="password" id="password" name="_password" placeholder="Password" class="form-control input-sm bounceIn animation-delay4"/>
                        </div>
                        <hr/>
                        {% if error %}
                            <div style="color:red;">{{ error.message }}</div>
                        {% endif %}

                        <input type="hidden" name="_target_path" value="/Inicio" />

                        <button type="submit" class="btn btn-success btn-sm bounceIn animation-delay5 pull-right"><i class="fa fa-sign-in"></i>Iniciar Sesi√≥n</button>
                    </form>
                </div>
            </div><!-- /panel -->
        </div><!-- /login-widget -->
    </div><!-- /login-wrapper -->

    <!-- Le javascript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    
    <!-- Jquery -->
    <script src="{{ asset('bundles/sisaf/js/jquery-1.10.2.min.js') }}"></script>
    
    <!-- Bootstrap -->
    <script src="{{ asset('bundles/sisaf/bootstrap/js/bootstrap.min.js') }}"></script>
   
    <!-- Modernizr -->
    <script src='{{ asset('bundles/sisaf/js/modernizr.min.js') }}'></script>
   
    <!-- Pace -->
    <script src='{{ asset('bundles/sisaf/js/pace.min.js') }}'></script>
   
    <!-- Popup Overlay -->
    <script src='{{ asset('bundles/sisaf/js/jquery.popupoverlay.min.js') }}'></script>
   
    <!-- Slimscroll -->
    <script src='{{ asset('bundles/sisaf/js/jquery.slimscroll.min.js') }}'></script>

    <!-- Endless -->
    <script src="{{ asset('bundles/sisaf/js/endless/endless.js') }}"></script>
  </body>
</html>
