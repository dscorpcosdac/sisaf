{% extends '::base.html.twig' %}
{% block body %}

<h1>Visitantes</h1>

<table class="records_list table table-hover panel panel-default">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nombre</th>
            <th>Automovil</th>
            <th>Destino</th>
            <th>Fecha Entrada</th>
            <th>Hora Entrada</th>
            <th>Hora Salida</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('visitantes_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.Nombre }}</td>
            <td>{{ entity.Automovil }}</td>
            <td>{{ entity.Destino }}</td>
            <td>{% if entity.FEntrada %}{{ entity.FEntrada|date('Y-m-d') }}{% endif %}</td>
            <td>{{ entity.HEntrada|date('H:i:s') }}</td>
            <td>{{ entity.HSalida|date('H:i:s') }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('visitantes_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('visitantes_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

{% endblock %}