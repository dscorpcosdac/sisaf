{% extends '::base.html.twig' %}
{% block body %}

{% if is_granted('ROLE_ADMIN') %}
<div class="panel panel-default table-responsive">
    <div class="panel-heading">
    <b>Visitantes</b>
        <span class="label label-info pull-right"></span>
    </div>
    <div class="padding-md clearfix">
        <table class="table table-striped" id="example">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nombre</th>
                    <th>Automovil</th>
                    <th>Destino</th>
                    <th>Fecha Entrada</th>
                    <th>Hora Entrada</th>
                    <th>Hora Salida</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for entity in entities %}
                    <tr>
                        <td><a href="{{ path('visitantes_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                        <td>{{ entity.Nombre }}</td>
                        <td>{{ entity.Automovil }}</td>
                        <td>{{ entity.Destino }}</td>
                        <td>{% if entity.FEntrada %}{{ entity.FEntrada|date('Y-m-d') }}{% endif %}</td>
                        <td>{{ entity.HEntrada|date('H:i:s') }}</td>
                        <td>{{ entity.HSalida|date('H:i:s') }}</td>
                        <td>
                            <ul>
                                <li>
                                    <a href="{{ path('visitantes_show', { 'id': entity.id }) }}">show</a>
                                </li>
                                <li>
                                    <a href="{{ path('visitantes_edit', { 'id': entity.id }) }}">edit</a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div><!-- /.padding-md -->
</div><!-- /panel -->

{% endif %}
{% endblock %}