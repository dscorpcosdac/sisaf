{% extends '::base.html.twig' %}
{% block body %}

<div class="panel panel-default">
    <div class="panel-heading"><h1>Cuota</h1></div>
    <div class="panel-body record_properties">
        <p><b>Id:</b> {{ entity.id }}</p>
        <p><b>Persona:</b> {{ entity.Persona }}</p>
        <p><b>Tipo:</b> {{ entity.Tipo }}</p>
        <p><b>Descripcion:</b> {{ entity.Descripcion }}</p>
        <p><b>Fecha:</b> {{ entity.Fecha|date('d/m/Y') }}</p>
        <p><b>Monto:</b> {{ entity.Monto }}</p>

    <a href="{{ path('cuotas') }}">Regresar</a>
    <a href="{{ path('cuotas_edit', { 'id': entity.id }) }}">Editar</a>
    <form action="{{ path('cuotas_delete', { 'id': entity.id }) }}" method="post">
        {{ form_widget(delete_form) }}
        <button type="submit">Eliminar</button>
    </form>

    </div>
</div>

{% endblock %}