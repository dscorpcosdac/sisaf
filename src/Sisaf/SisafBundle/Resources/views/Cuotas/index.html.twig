{% extends '::base.html.twig' %}
{% block body %}

{% if is_granted('ROLE_ADMIN') or is_granted('ROLE_TESORERO') or is_granted('ROLE_COLONO') %}
<div class="panel panel-default table-responsive">
    <div class="panel-heading">
    <b>Cuotas</b>
        <span class="label label-info pull-right"></span>
    </div>
    <div class="padding-md clearfix">
        <table class="table table-striped table-responsive" id="example">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Vecinos</th>
                    <th>Tipo</th>
                    <th>Descripcion</th>
                    <th>Fecha</th>
                    <th>Monto</th>
                    <th>Frecuencia de pago</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for entity in entities %}
                    <tr>
                        <td><a href="{{ path('cuotas_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                        <td></td>
                        <td>{{ entity.Tipo }}</td>
                        <td>{{ entity.Descripcion }}</td>
                        <td>{% if entity.fechaDeInicio %}{{ entity.fechaDeInicio|date('d/M/Y') }}{% endif %}</td>
                        <td>{{ entity.Monto }}</td>
                        <td></td>
                        <td>
                            <ul>
                                <li>
                                    <a href="{{ path('cuotas_show', { 'id': entity.id }) }}">show</a>
                                </li>
                                <li>
                                    <a href="{{ path('cuotas_edit', { 'id': entity.id }) }}">edit</a>
                                </li>
                                <li>
                                    <a href="">Asignar Residente</a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div><!-- /.padding-md -->
</div><!-- /panel -->


{% endif %}
{% endblock %}