{% extends '::base.html.twig' %}
{% block body %}

<h1>Cuotas</h1>

<table class="records_list table table-hover panel panel-default">
    <thead>
        <tr>
            <th>Id</th>
            <th>Persona</th>
            <th>Tipo</th>
            <th>Descripcion</th>
            <th>Fecha</th>
            <th>Monto</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('cuotas_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.Persona }}</td>
            <td>{{ entity.Tipo }}</td>
            <td>{{ entity.Descripcion }}</td>
            <td>{% if entity.Fecha %}{{ entity.Fecha|date('d/M/Y') }}{% endif %}</td>
            <td>{{ entity.Monto }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('cuotas_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('cuotas_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

{% endblock %}