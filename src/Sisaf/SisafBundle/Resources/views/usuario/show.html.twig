{% extends '::base.html.twig' %}
{% block body %}

{% if is_granted('ROLE_ADMIN') %}
<div class="panel panel-default">

    <div class="panel-heading"><h1>Residente #{{ entity.id }}</h1></div>
    <div class="panel-body record_properties">
        <p><b>Id:</b> {{ entity.id }}</p>
        <p><b>Nombre(s):</b> {{ entity.username }}</p>
        <p><b>Apellido Paterno</b>{{ entity.apellidopa }}</p>
        <p><b>Apellido Materno</b>{{ entity.apellidoma }}</p>
        <p><b>Contrase√±a:</b> {{ entity.password }}</p>
        <p><b>Correo:</b> {{ entity.email }}</p>
        <p><b>Colonia:</b> {{ entity.colonia }}</p>
        <p><b>Calle:</b> {{ entity.calle }}</p>
        <p><b>Numero:</b> {{ entity.numero }}</p>
        <p><b>Edificio:</b> {{ entity.edificio }}</p>
        <p><b>Piso:</b> {{ entity.piso }}</p>
        <p><b>Departamento:</b> {{ entity.departamento }}</p>
        <p><b>Telefono:</b> {{ entity.telefono }}</p>
        {#<p><b>Permisos:</b> {{ entity.roles|join }}</p>#}

        <form action="{{ path('usuario_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button class="btn btn-danger" type="submit"><i class="fa fa-times"></i>&nbsp;Eliminar</button>
            <a class="btn btn-warning" href="{{ path('usuario') }}"><i class="fa fa-reply"></i>&nbsp;Regresar</a>
            <a class="btn btn-success" href="{{ path('usuario_edit', { 'id': entity.id }) }}"><i class="fa fa-pencil"></i>&nbsp;Editar</a>
        </form>
    </div>
</div>

{% endif %}
{% endblock %}
