{% extends '::base.html.twig' %}
{% block body %}

<h1>Editar Perfil</h1>

<div class="row">
    <div class="col-xs-12">
        <form action="{{ path('perfil_update') }}" method="post" {{ form_enctype(edit_form) }}>
            
            {#<div class="form-group" style="display:none">
                <label>Foto de Perfil</label>
                {{ form_widget(edit_form.userpic, {'attr': {'class': 'form-control'}}) }}
                <span class="help-block m-b-none">{{ form_errors(edit_form.userpic) }}</span>
            </div>#}

            <div class="form-group col-sm-4">
                <label>Nombre(s)</label>
                {{ form_widget(edit_form.username, {'attr': {'class': 'form-control'}}) }}
                <span class="help-block m-b-none">{{ form_errors(edit_form.username) }}</span>
            </div>
            <div class="form-group col-sm-4">
                <label>Apellido Paterno</label>
                {{ form_widget(edit_form.apellidopa, {'attr': {'class': 'form-control'}}) }}
                <span class="help-block m-b-none">{{ form_errors(edit_form.apellidopa) }}</span>
            </div>
            <div class="form-group col-sm-4">
                <label>Apellido Materno</label>
                {{ form_widget(edit_form.apellidoma, {'attr': {'class': 'form-control'}}) }}
                <span class="help-block m-b-none">{{ form_errors(edit_form.apellidoma) }}</span>
            </div>
            <div class="form-group col-sm-6">
                <label>Contrase√±a</label>
                {{ form_widget(edit_form.password, {'attr': {'class': 'form-control'}}) }}
                <span class="help-block m-b-none">{{ form_errors(edit_form.password) }}</span>
            </div>
            <div class="form-group col-sm-6">
                <label>Correo</label>
                {{ form_widget(edit_form.email, {'attr': {'class': 'form-control'}}) }}
                <span class="help-block m-b-none">{{ form_errors(edit_form.email) }}</span>
            </div>

            <div class="row" id="tipoCasa" style="display:none">
                <div class="form-group col-sm-4">
                    <label>Colonia</label>
                    {{ form_widget(edit_form.colonia, {'attr': {'class': 'form-control'}}) }}
                    <span class="help-block m-b-none">{{ form_errors(edit_form.colonia) }}</span>
                </div>
                <div class="form-group col-sm-4">
                    <label>Calle</label>
                    {{ form_widget(edit_form.calle, {'attr': {'class': 'form-control'}}) }}
                    <span class="help-block m-b-none">{{ form_errors(edit_form.calle) }}</span>
                </div>
                <div class="form-group col-sm-4">
                    <label>Numero</label>
                    {{ form_widget(edit_form.numero, {'attr': {'class': 'form-control'}}) }}
                    <span class="help-block m-b-none">{{ form_errors(edit_form.numero) }}</span>
                </div>
            </div>

            <div class="row" id="tipoDepartamento" style="display:none">
                <div class="form-group col-sm-4">
                    <label>Edificio</label>
                    {{ form_widget(edit_form.edificio, {'attr': {'class': 'form-control'}}) }}
                    <span class="help-block m-b-none">{{ form_errors(edit_form.edificio) }}</span>
                </div>
                <div class="form-group col-sm-4">
                    <label>Piso</label>
                    {{ form_widget(edit_form.piso, {'attr': {'class': 'form-control'}}) }}
                    <span class="help-block m-b-none">{{ form_errors(edit_form.piso) }}</span>
                </div>
                <div class="form-group col-sm-4">
                    <label>Departamento</label>
                    {{ form_widget(edit_form.departamento, {'attr': {'class': 'form-control'}}) }}
                    <span class="help-block m-b-none">{{ form_errors(edit_form.departamento) }}</span>
                </div>
            </div>
            <div class="form-group col-xs-12">
                <label>Telefono</label>
                {{ form_widget(edit_form.telefono, {'attr': {'class': 'form-control'}}) }}
                <span class="help-block m-b-none">{{ form_errors(edit_form.telefono) }}</span>
            </div>

            {{ form_widget(edit_form._token) }}

                <button class="btn btn-success" type="submit"><i class="fa fa-pencil"></i>&nbsp;Actualizar</button>
                <a class="btn btn-warning" href="{{ path('perfil_index') }}"><i class="fa fa-reply"></i>&nbsp;Regresar</a>
        </form>
    </div>
</div>

{% endblock %}
