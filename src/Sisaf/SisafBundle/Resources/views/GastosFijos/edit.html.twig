{% extends '::base.html.twig' %}
{% block body %}

<h1>GastosFijos edit</h1>

<form action="{{ path('gastosfijos_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    <div class="form-group">
        <label>Nombre</label>
        {{ form_widget(edit_form.Nombre, {'attr': {'class': 'form-control'}}) }}
        <span class="help-block m-b-none">{{ form_errors(edit_form.Nombre) }}</span>
    </div>
    <div class="form-group">
        <label>Descripcion</label>
        {{ form_widget(edit_form.Descripcion, {'attr': {'class': 'form-control'}}) }}
        <span class="help-block m-b-none">{{ form_errors(edit_form.Descripcion) }}</span>
    </div>
    <div class="form-group">
        <label>Monto</label>
        {{ form_widget(edit_form.Monto, {'attr': {'class': 'form-control'}}) }}
        <span class="help-block m-b-none">{{ form_errors(edit_form.Monto) }}</span>
    </div>

    {{ form_widget(edit_form._token) }}
    <button type="submit" class="btn btn-success"><i class="fa fa-pencil"></i>&nbsp;Actualizar</button>
    <a class="btn btn-warning" href="{{ path('gastosfijos') }}"><i class="fa fa-reply"></i>&nbsp;Regresar</a>
</form>

