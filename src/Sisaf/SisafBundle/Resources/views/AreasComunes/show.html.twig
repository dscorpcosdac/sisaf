{% extends '::base.html.twig' %}
{% block body %}


<div class="panel panel-default">
    <div class="panel-heading"><h1>Reservacion de area comúne</h1></div>
    <div class="panel-body record_properties">
        <p><b>Id:</b> {{ entity.id }}</p>
        <p><b>Nombre:</b> {{ entity.Nombre }}</p>
        <p><b>Persona:</b> {{ entity.Persona}}</p>
        <p><b>Fecha de reservación:</b> {{ entity.Fecha|date('d/m/Y') }}</p>
        <p><b>Fecha de Registro:</b> {{ entity.FechaRegistro|date('d/m/Y') }}</p>

    <form action="{{ path('areascomunes_delete', { 'id': entity.id }) }}" method="post">
        {{ form_widget(delete_form) }}
        <button class="btn btn-danger" type="submit"><i class="fa fa-times"></i>&nbsp;Eliminar</button>
            <a class="btn btn-warning" href="{{ path('areascomunes') }}"><i class="fa fa-reply"></i>&nbsp;Regresar</a>
            <a class="btn btn-success" href="{{ path('areascomunes_edit', { 'id': entity.id }) }}"><i class="fa fa-pencil"></i>&nbsp;Editar</a>
    </form>

    </div>
</div>

{% endblock %}