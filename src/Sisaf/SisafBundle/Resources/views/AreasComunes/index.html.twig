{% extends '::base.html.twig' %}
{% block body %}

{% if is_granted('ROLE_ADMIN') or is_granted('ROLE_COLONO') %}
<div class="panel panel-default table-responsive">
    <div class="panel-heading">
    <b>Reservaciones de Areas Comunes</b>
        <span class="label label-info pull-right"></span>
    </div>
    <div class="padding-md clearfix">
        <table class="table table-striped" id="example">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nombre</th>
                    <th>Persona</th>
                    <th>Fecha de reservaci√≥n</th>
                    <th>Fecha de Registro</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for entity in entities %}
                    <tr>
                        <td><a href="{{ path('areascomunes_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                        <td>{{ entity.Nombre }}</td>
                        <td>{{ entity.Persona }}</td>
                        <td>{{ entity.Fecha|date('d/m/Y') }}</td>
                        <td>{{ entity.FechaRegistro|date('d/m/Y') }}</td>
                        <td>
                            <ul>
                                <li>
                                    <a href="{{ path('areascomunes_show', { 'id': entity.id }) }}">show</a>
                                </li>
                                <li>
                                    <a href="{{ path('areascomunes_edit', { 'id': entity.id }) }}">edit</a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div><!-- /.padding-md -->
</div><!-- /panel -->

{% endif %}
{% endblock %}
