{% extends '::base.html.twig' %}
{% block body %}

<h1>AreasComunes edit</h1>

<form action="{{ path('areascomunes_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
     <div class="form-group">
        <label>Nombre</label>
        {{ form_widget(edit_form.Nombre, {'attr': {'class': 'form-control'}}) }}
        <span class="help-block m-b-none">{{ form_errors(edit_form.Nombre) }}</span>
    </div>
    <div class="form-group">
        <label>Persona</label>
        {{ form_widget(edit_form.Persona, {'attr': {'class': 'form-control'} }) }}
        <span class="help-block m-b-none">{{ form_errors(edit_form.Persona) }}</span>
    </div>
    <div class="form-group">
        <label>Fecha</label>
        {{ form_widget(edit_form.Fecha, {'attr': {'class': 'form-control'}}) }}
        <span class="help-block m-b-none">{{ form_errors(edit_form.Fecha) }}</span>
    </div>
    {{ form_widget(edit_form._token) }}
    <p>
        <button type="submit">Edit</button>
    </p>
</form>

<ul class="record_actions">
    <li>
        <a href="{{ path('areascomunes') }}">
            Back to the list
        </a>
    </li>
    <li>
        <form action="{{ path('areascomunes_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>

{% endblock %}