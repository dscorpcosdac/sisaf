{% extends '::base.html.twig' %}
{% block body %}

{% if is_granted('ROLE_ADMIN') %}
<h1>Editar pago pendiente</h1>

<form action="{{ path('morosos_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    <div class="form-group">
        <label>Persona</label>
        {{ form_widget(edit_form.Persona, {'attr': {'class': 'form-control'}}) }}
        <span class="help-block m-b-none">{{ form_errors(edit_form.Persona) }}</span>
    </div>
    <div class="form-group">
        <label>Correo</label>
        {{ form_widget(edit_form.Correo, {'attr': {'class': 'form-control'}}) }}
        <span class="help-block m-b-none">{{ form_errors(edit_form.Correo) }}</span>
    </div>
    <div class="form-group">
        <label>Telefono</label>
        {{ form_widget(edit_form.Telefono, {'attr': {'class': 'form-control'}}) }}
        <span class="help-block m-b-none">{{ form_errors(edit_form.Telefono) }}</span>
    </div>
    <div class="form-group">
        <label>Residencia</label>
        {{ form_widget(edit_form.Residencia, {'attr': {'class': 'form-control'}}) }}
        <span class="help-block m-b-none">{{ form_errors(edit_form.Residencia) }}</span>
    </div>

    {{ form_widget(edit_form._token, {'attr': {'class': 'form-control'}}) }}

    <p>
        <button type="submit">Edit</button>
    </p>
</form>

<ul class="record_actions">
    <li>
        <a href="{{ path('morosos') }}">
            Back to the list
        </a>
    </li>
    <li>
        <form action="{{ path('morosos_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>

{% endif %}
{% endblock %}