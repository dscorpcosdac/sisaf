{% extends '::base.html.twig' %}
{% block body %}

<h1>Morosos creation</h1>

<form action="{{ path('morosos_create') }}" method="post" {{ form_enctype(form) }}>
    
    <div class="form-group">
        <label>Persona</label>
        {{ form_widget(form.Persona, {'attr': {'class': 'form-control'}}) }}
        <span class="help-block m-b-none">{{ form_errors(form.Persona) }}</span>
    </div>
    <div class="form-group">
        <label>Correo</label>
        {{ form_widget(form.Correo, {'attr': {'class': 'form-control'}}) }}
        <span class="help-block m-b-none">{{ form_errors(form.Correo) }}</span>
    </div>
    <div class="form-group">
        <label>Telefono</label>
        {{ form_widget(form.Telefono, {'attr': {'class': 'form-control'}}) }}
        <span class="help-block m-b-none">{{ form_errors(form.Telefono) }}</span>
    </div>
    <div class="form-group">
        <label>Residencia</label>
        {{ form_widget(form.Recidencia, {'attr': {'class': 'form-control'}}) }}
        <span class="help-block m-b-none">{{ form_errors(form.Recidencia) }}</span>
    </div>

    {{ form_widget(form._token, {'attr': {'class': 'form-control'}}) }}

    <p>
        <button type="submit">Create</button>
    </p>
</form>

<ul class="record_actions">
    <li>
        <a href="{{ path('morosos') }}">
            Back to the list
        </a>
    </li>
</ul>

{% endblock %}