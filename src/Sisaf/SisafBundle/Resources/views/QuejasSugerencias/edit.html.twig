{% extends '::base.html.twig' %}
{% block body %}

{% if is_granted('ROLE_ADMIN') %}
<h1>Editar Queja/Sugerencia</h1>

<form action="{{ path('quejassugerencias_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    <div class="form-group">
        <label>Tipo</label>
        {{ form_widget(edit_form.Tipo, {'attr': {'class': 'form-control'}}) }}
        <span class="help-block m-b-none">{{ form_errors(edit_form.Tipo) }}</span>
    </div>
    <div class="form-group">
        <label>Titulo</label>
        {{ form_widget(edit_form.Titulo, {'attr': {'class': 'form-control'}}) }}
        <span class="help-block m-b-none">{{ form_errors(edit_form.Titulo) }}</span>
    </div>
    <div class="form-group">
        <label>Descripcion</label>
        {{ form_widget(edit_form.Descripcion, {'attr': {'class': 'form-control', 'rows': '10'}}) }}
        <span class="help-block m-b-none">{{ form_errors(edit_form.Descripcion) }}</span>
    </div>
    <div style="display:none;">
        <div class="form-group">
            <label>Fecha</label>
            {{ form_widget(edit_form.Fecha, {'attr': {'class': 'form-control'}}) }}
            <span class="help-block m-b-none">{{ form_errors(edit_form.Fecha) }}</span>
        </div>
    </div>

    {{ form_widget(edit_form._token) }}
    <button type="submit" class="btn btn-success"><i class="fa fa-pencil"></i>&nbsp;Actualizar</button>
    <a class="btn btn-warning" href="{{ path('quejassugerencias') }}"><i class="fa fa-reply"></i>&nbsp;Regresar</a>

</form>

    {#<form action="{{ path('quejassugerencias_delete', { 'id': entity.id }) }}" method="post">
        {{ form_widget(delete_form) }}
        <button type="submit">Delete</button>
    </form>#}

{% endif %}
{% endblock %}