{% extends '::base.html.twig' %}
{% block body %}

<h1>Editar Queja/Sugerencia</h1>

<form action="{{ path('quejassugerencias_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    <div class="form-group">
        <label>Titulo</label>
        {{ form_widget(edit_form.Titulo, {'attr': {'class': 'form-control'}}) }}
        <span class="help-block m-b-none">{{ form_errors(edit_form.Titulo) }}</span>
    </div>
    <div class="form-group">
        <label>Descripcion</label>
        {{ form_widget(edit_form.Descripcion, {'attr': {'class': 'form-control'}}) }}
        <span class="help-block m-b-none">{{ form_errors(edit_form.Descripcion) }}</span>
    </div>
    <div style="display:none;">
        <div class="form-group">
            <label>Fecha</label>
            {{ form_widget(edit_form.Fecha, {'attr': {'class': 'form-control'}}) }}
            <span class="help-block m-b-none">{{ form_errors(edit_form.Fecha) }}</span>
        </div>
    </div>

    {{ form_widget(edit_form._token, {'attr': {'class': 'form-control'}}) }}
    <p>
        <button type="submit">Edit</button>
    </p>
</form>

<ul class="record_actions">
    <li>
        <a href="{{ path('quejassugerencias') }}">
            Back to the list
        </a>
    </li>
    <li>
        <form action="{{ path('quejassugerencias_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>

{% endblock %}