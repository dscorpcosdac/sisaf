{% extends '::base.html.twig' %}
{% block body %}

{% if is_granted('ROLE_ADMIN') %}
<h1>Editar Departamento</h1>

<form action="{{ path('departamentos_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    <div class="form-group">
        <label>Edificio</label>
        {{ form_widget(edit_form.edificio, {'attr': {'class': 'form-control'}}) }}
        <span class="help-block m-b-none">{{ form_errors(edit_form.edificio) }}</span>
    </div>
    <div class="form-group">
        <label>Piso</label>
        {{ form_widget(edit_form.piso, {'attr': {'class': 'form-control'}}) }}
        <span class="help-block m-b-none">{{ form_errors(edit_form.piso) }}</span>
    </div>
    <div class="form-group">
        <label>Departamento</label>
        {{ form_widget(edit_form.departamento, {'attr': {'class': 'form-control'}}) }}
        <span class="help-block m-b-none">{{ form_errors(edit_form.departamento) }}</span>
    </div>

    {{ form_widget(edit_form._token) }}
    <button type="submit" class="btn btn-success"><i class="fa fa-pencil"></i>&nbsp;Actualizar</button>
    <a class="btn btn-warning" href="{{ path('departamentos') }}"><i class="fa fa-reply"></i>&nbsp;Regresar</a>

</form>

    {#<form action="{{ path('departamentos_delete', { 'id': entity.id }) }}" method="post">
        {{ form_widget(delete_form) }}
        <button type="submit">Delete</button>
    </form>#}

{% endif %}
{% endblock %}