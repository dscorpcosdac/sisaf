{% extends '::base.html.twig' %}
{% block body %}

{% if is_granted('ROLE_ADMIN') %}
<h1>Nuevo Departamento</h1>

<form action="{{ path('departamentos_create') }}" method="post" {{ form_enctype(form) }}>
    
    <div class="form-group">
        <label>Edificio</label>
        {{ form_widget(form.edificio, {'attr': {'class': 'form-control'}}) }}
        <span class="help-block m-b-none">{{ form_errors(form.edificio) }}</span>
    </div>
    <div class="form-group">
        <label>Piso</label>
        {{ form_widget(form.piso, {'attr': {'class': 'form-control'}}) }}
        <span class="help-block m-b-none">{{ form_errors(form.piso) }}</span>
    </div>
    <div class="form-group">
        <label>Departamento</label>
        {{ form_widget(form.departamento, {'attr': {'class': 'form-control'}}) }}
        <span class="help-block m-b-none">{{ form_errors(form.departamento) }}</span>
    </div>

    {{ form_widget(form._token, {'attr': {'class': 'form-control'}}) }}
    
    <p>
        <button class="btn btn-success" type="submit"><i class="fa fa-plus"></i>&nbsp;Crear</button>
        <a class="btn btn-warning" href="{{ path('departamentos') }}"><i class="fa fa-reply"></i>&nbsp;Regresar</a>
    </p>

{% endif %}
{% endblock %}