{% extends '::base.html.twig' %}
{% block body %}

{% if is_granted('ROLE_ADMIN') %}
<h1>Administracion de areas comunes</h1>

<form action="{{ path('adminareascomunes_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
     <div class="form-group">
        <label>Area</label>
        {{ form_widget(edit_form.Area, {'attr': {'class': 'form-control'}}) }}
        <span class="help-block m-b-none">{{ form_errors(edit_form.Area) }}</span>
    </div>
    <div class="form-group">
        <label>Tipo</label>
        {{ form_widget(edit_form.Tipo, {'attr': {'class': 'form-control'} }) }}
        <span class="help-block m-b-none">{{ form_errors(edit_form.Tipo) }}</span>
    </div>
    <div class="form-group">
        <label>Ubicacion</label>
        {{ form_widget(edit_form.Ubicacion, {'attr': {'class': 'form-control'}}) }}
        <span class="help-block m-b-none">{{ form_errors(edit_form.Ubicacion) }}</span>
    </div>
    
    {{ form_widget(edit_form._token) }}
    <p>
        <button type="submit">Editar</button>
    </p>
</form>

<ul class="record_actions">
    <li>
        <a href="{{ path('adminareascomunes') }}">
            Regresar
        </a>
    </li>
    <li>
        <form action="{{ path('adminareascomunes_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Eliminar</button>
        </form>
    </li>
</ul>
{% endif %}

{% endblock %}