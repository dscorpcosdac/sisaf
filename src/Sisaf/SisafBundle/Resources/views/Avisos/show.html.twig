{% extends '::base.html.twig' %}
{% block body %}
<div class="panel panel-default">
	<div class="panel-heading"><h4>{{entity.Titulo }}</h4></div>
	<div class="panel-body">

		<p>{{ entity.Descripcion }}</p>
		
		<p><b>Fecha de env√≠o:</b> {{ entity.Fecha|date('d/m/Y') }}</p>
		<hr>
		<a href="{{ path('Avisos') }}">Regresar</a>
		<br>
		<a href="{{ path('Avisos_edit', { 'id': entity.id }) }}">Editar</a>

		<form action="{{ path('Avisos_delete', { 'id': entity.id }) }}" method="post">
		    {{ form_widget(delete_form) }}
		    <button type="submit">Eliminar</button>
		</form>
	</div>
</div>
{% endblock %}