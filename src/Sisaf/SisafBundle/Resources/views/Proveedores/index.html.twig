{% extends '::base.html.twig' %}
{% block body %}

<h1>Proveedores</h1>

<table class="records_list table table-hover panel panel-default">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nombre</th>
            <th>RFC</th>
            <th>Pais</th>
            <th>Estatus</th>
            <th>Opciones</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('proveedores_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.Nombre }}</td>
            <td>{{ entity.RFC }}</td>
            <td>{{ entity.Pais }}</td>
            <td>{{ entity.Estatus }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('proveedores_show', { 'id': entity.id }) }}">Ver</a>
                    </li>
                    <li>
                        <a href="{{ path('proveedores_edit', { 'id': entity.id }) }}">Editar</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

{% endblock %}