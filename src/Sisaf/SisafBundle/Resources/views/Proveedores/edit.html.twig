{% extends '::base.html.twig' %}
{% block body %}

<h1>Editar Proveedor</h1>

<form action="{{ path('proveedores_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    <div class="form-group">
        <label>Nombre</label>
        {{ form_widget(edit_form.Nombre, {'attr': {'class': 'form-control'}}) }}
        <span class="help-block m-b-none">{{ form_errors(edit_form.Nombre) }}</span>
    </div>
    <div class="form-group">
        <label>RFC</label>
        {{ form_widget(edit_form.RFC, {'attr': {'class': 'form-control'}}) }}
        <span class="help-block m-b-none">{{ form_errors(edit_form.RFC) }}</span>
    </div>
    <div class="form-group">
        <label>Pais</label>
        {{ form_widget(edit_form.Pais, {'attr': {'class': 'form-control'}}) }}
        <span class="help-block m-b-none">{{ form_errors(edit_form.Pais) }}</span>
    </div>
    <div class="form-group">
        <label>Estatus</label>
        {{ form_widget(edit_form.Estatus, {'attr': {'class': 'form-control'}}) }}
        <span class="help-block m-b-none">{{ form_errors(edit_form.Estatus) }}</span>
    </div>

    {{ form_widget(edit_form._token) }}
    <button type="submit" class="btn btn-success"><i class="fa fa-pencil"></i>&nbsp;Actualizar</button>
    <a class="btn btn-warning" href="{{ path('proveedores') }}"><i class="fa fa-reply"></i>&nbsp;Regresar</a>
</form>

    {#<form action="{{ path('proveedores_delete', { 'id': entity.id }) }}" method="post">
        {{ form_widget(delete_form) }}
        <button type="submit">Delete</button>
    </form>#}

{% endblock %}